<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#fffee9"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="300dp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            app:sliderIndicatorGravity="start"
            app:sliderIndicatorSelectedColor="@color/colorAccent"
            app:sliderIndicatorUnselectedColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:onClick="didyouknow"
            android:id="@+id/didyouknow_id"
            android:clickable="true"
            android:src="@drawable/didyouknow"
            android:layout_width="200dp"
            android:layout_height="70dp"/>
    </LinearLayout>

<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/agricultural_cv_id"
        android:onClick="agricultural_click"
        android:clickable="true"
        android:layout_width="150dp"
        android:layout_height="160dp"
        app:cardCornerRadius="30dp"
        android:elevation="0dp"
        app:cardBackgroundColor="#f7f7f7"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/agricultural_sector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agricultural Sector"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/domestic_cv_id"
        android:onClick="domestic_click"
        android:clickable="true"
        android:layout_width="150dp"
        android:layout_height="160dp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="30dp"
        android:elevation="0dp"
        app:cardBackgroundColor="#f7f7f7"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/domestic_sector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domestic Sector"
                android:textColor="#000000"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/transport_cv_id"
            android:onClick="transport_click"
            android:clickable="true"
            android:layout_width="150dp"
            android:layout_height="160dp"
            app:cardCornerRadius="30dp"
            android:elevation="0dp"
            app:cardBackgroundColor="#f7f7f7"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/transport_sector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport Sector"
                    android:textColor="#000000"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/industrial_cv_id"
            android:onClick="industrial_click"
            android:clickable="true"
            android:layout_width="150dp"
            android:layout_height="160dp"
            app:cardCornerRadius="30dp"
            android:layout_marginLeft="30dp"
            android:elevation="0dp"
            app:cardBackgroundColor="#f7f7f7"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/industrial_sector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Industrial Sector"
                    android:textColor="#000000"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>